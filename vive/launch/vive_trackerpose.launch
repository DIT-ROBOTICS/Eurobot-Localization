<launch>
    <arg name="robot1_active" default="true"/>  <!-- need to check -->
    <arg name="robot2_active" default="false"/>  <!-- need to check -->
    <arg name="robot1_tracker" default="trackerC"/>
    <arg name="robot2_tracker" default="trackerB"/>
    <arg name="ekf_" default="false"/>
    <arg name="tole_ekf" default="0.2"/>
    
    <group ns="robot1" if="$(arg robot1_active)">
        <include file="$(find vive)/launch/vive_world.launch">
            <arg name="survive1_active" default="$(arg robot1_active)"/>
            <arg name="survive1_tracker" default="$(arg robot1_tracker)"/>
        </include>
        <node name="vive_trackerpose" pkg="vive" type="vive_trackerpose" output="screen">
            <param name="robot_name" type="string" value="robot1"/> <!-- need to check -->
            <param name="survive_prefix" type="string" value="survive1_"/>  <!-- need to check -->
            <param name="tracker" type="string" value="$(arg robot1_tracker)"/>  <!-- need to check -->
            <param name="ekf_active" type="bool" value="$(arg ekf_)"/>
            <param name="tole_with_ekf" type="double" value="$(arg tole_ekf)"/>
            <param name="freq" type="double" value="100"/>  <!--the publishing freqency is this value divided by 5-->
            <param name="unit" type="double" value="100"/>
            <param name="rot_from_tracker_W" type="double" value="1"/>
            <param name="rot_from_tracker_X" type="double" value="0"/>
            <param name="rot_from_tracker_Y" type="double" value="0"/>
            <param name="rot_from_tracker_Z" type="double" value="0"/>
            <param name="covariance0" type="double" value="0.01"/>
            <param name="covariance7" type="double" value="0.01"/>
            <param name="covariance14" type="double" value="0.01"/>
            <param name="covariance21" type="double" value="0.01"/>
            <param name="covariance28" type="double" value="0.01"/>
            <param name="covariance35" type="double" value="0.01"/>
        </node>
        <!-- <node pkg="vive" type="fake_ekf" name="fake_ekf">
            <param name="fake_ekf_x" type="double" value="1.48"/>
            <param name="fake_ekf_y" type="double" value="0.21"/>
        </node> -->
    </group>

    <group ns="robot2" if="$(arg robot2_active)">
        <include file="$(find vive)/launch/vive_world.launch">
            <arg name="survive1_active" default="$(arg robot2_active)"/>
            <arg name="survive1_tracker" default="$(arg robot2_tracker)"/>
        </include>
        <node name="vive_trackerpose" pkg="vive" type="vive_trackerpose" output="screen">
            <param name="robot_name" type="string" value="robot2"/> <!-- need to check -->
            <param name="survive_prefix" type="string" value="survive2_"/>  <!-- need to check -->
            <param name="tracker" type="string" value="$(arg robot2_tracker)"/>  <!-- need to check -->
            <param name="ekf_active" type="bool" value="$(arg ekf_)"/>
            <param name="tole_with_ekf" type="double" value="$(arg tole_ekf)"/>
            <param name="freq" type="double" value="100"/>  <!--the publishing freqency is this value divided by 5-->
            <param name="unit" type="double" value="100"/>
            <param name="rot_from_tracker_W" type="double" value="1"/>
            <param name="rot_from_tracker_X" type="double" value="0"/>
            <param name="rot_from_tracker_Y" type="double" value="0"/>
            <param name="rot_from_tracker_Z" type="double" value="0"/>
            <param name="covariance0" type="double" value="0.01"/>
            <param name="covariance7" type="double" value="0.01"/>
            <param name="covariance14" type="double" value="0.01"/>
            <param name="covariance21" type="double" value="0.01"/>
            <param name="covariance28" type="double" value="0.01"/>
            <param name="covariance35" type="double" value="0.01"/>
        </node>
        <!-- <node pkg="vive" type="fake_ekf" name="fake_ekf">
            <param name="fake_ekf_x" type="double" value="1.48"/>
            <param name="fake_ekf_y" type="double" value="0.21"/>
        </node> -->
    </group>
    
</launch>